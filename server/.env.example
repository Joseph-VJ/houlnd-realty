# ===========================================
# Houlnd Realty Server - Environment Variables
# ===========================================

# Database (PostgreSQL)
DATABASE_URL=postgresql://user:password@localhost:5432/houlnd_realty_dev
DATABASE_POOL_SIZE=20
DATABASE_SSL=false

# JWT & Authentication
JWT_SECRET=your-256-bit-secret-key-here-change-in-production
JWT_ACCESS_TOKEN_EXPIRY=15m
JWT_REFRESH_TOKEN_EXPIRY=7d
BCRYPT_ROUNDS=12

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX_ATTEMPTS=5
AUTH_RATE_LIMIT_WINDOW_MS=900000

# OAuth2 (Google, Apple) - Optional
GOOGLE_CLIENT_ID=your-client-id
GOOGLE_CLIENT_SECRET=your-secret
APPLE_CLIENT_ID=your-client-id
APPLE_TEAM_ID=your-team-id

# Email & SMS (Optional for MVP)
SENDGRID_API_KEY=your-api-key
TWILIO_ACCOUNT_SID=your-sid
TWILIO_AUTH_TOKEN=your-token

# Encryption
ENCRYPTION_KEY=your-256-bit-key
ENCRYPTION_IV=your-iv

# Environment
NODE_ENV=development
PORT=5000
LOG_LEVEL=debug
CORS_ORIGIN=http://localhost:3000

# Redis (Cache & Sessions) - Optional for MVP
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
SESSION_SECRET=your-session-secret

# Frontend URL (for email links)
FRONTEND_URL=http://localhost:3000
